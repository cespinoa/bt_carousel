{# templates/macros/_media-images-bootstrap-3.html.twig #}

{% macro render_carousel_inner(settings, images) %}
  <div class="carousel-inner" role="listbox">
    {% for image in images %}
    
      <div class="item{% if loop.first %} active{% endif %}">
        <img src="{{ image.url }}" alt="{{ image.alt }}" class="d-block w-100">
        {% if settings.show_alt_text %}
          <div class="carousel-caption d-none d-md-block">
            <p>{{ image.alt }}</p>
          </div>
        {% endif %}
      </div>
      
    {% endfor %}
  </div>
{% endmacro %}


{% macro render_carousel_controls(carousel_id) %}
  <a class="left carousel-control" href="#{{ carousel_id }}" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#{{ carousel_id }}" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
{% endmacro %}


{% macro render_carousel_indicators(carousel_id, images, thumbnails, settings, carousel_indicators) %}
  <ol class="{{ carousel_indicators }}">
    {% for image in images %}
      <li data-target="#{{ carousel_id }}" data-slide-to="{{ loop.index0 }}" class="{% if loop.first %} active{% endif %}">
      {% if settings.show_thumbnails %}
        <img src="{{ thumbnails[loop.index0] }}">
      {% endif %}
      </li>
    {% endfor %}
  </ol>
{% endmacro %}
