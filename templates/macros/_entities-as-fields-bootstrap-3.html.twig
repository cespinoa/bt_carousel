{# templates/macros/_entities-as-fields-bootstrap-3.html.twig #}

{% macro render_carousel_inner(settings, slides) %}
  <div class="carousel-inner">
      
    {% for slide in slides %}
      <div class="item{% if loop.first %} active{% endif %}">
        <img src="{{ file_url(slide.image) }}" class="d-block w-100" alt="...">
        <div class="carousel-caption d-none d-md-block  position-static-edge-to-edge  {{ settings.text_area_style }}">
          <{{ settings.title_field_tag }} class="{{ settings.title_field_style }}">{{ slide.title }}</{{ settings.title_field_tag }}>
          <div class="{{ settings.text_field_style }}">{{ slide.text }}</div>
          {{ slide.link | render }}
        </div>
      </div>
    {% endfor %}
    
  </div>
{% endmacro %}


{% macro render_carousel_controls(carousel_id) %}
  <a class="carousel-control-prev" href="#{{ carousel_id }}" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#{{ carousel_id }}" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
{% endmacro %}


{% macro render_carousel_indicators(carousel_id, slides, thumbnails, settings, carousel_indicators) %}
  <ol class="{{ carousel_indicators }}">
      {% for slide in slides %}
        <li data-target="#{{ carousel_id }}" data-slide-to="{{ loop.index0 }}" class="{% if loop.first %} active{% endif %}  {% if thumbnails %} thumbnail{% endif %}">
          {% if thumbnails %}
            <img src="{{ file_url(thumbnails[loop.index0].uri) }}" class="d-block w-100">
          {% endif %}
        </li>
      {% endfor %}
    </ol>
{% endmacro %}
